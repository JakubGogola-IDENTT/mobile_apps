<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="29dp" android:id="@+id/textView6" android:layout_weight="1"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="top" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/tableLayout">

            <TableRow android:layout_width="wrap_content" android:layout_height="match_parent">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_0_0"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:onClick="onFieldButtonClick"
                        android:layout_margin="2dp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_0_1"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_0_2"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_0_3"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_0_4"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_1_0"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_1_1"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_1_2"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_1_3"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_1_4"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_2_0"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_2_1"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_2_2"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_2_3"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_2_4"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_3_0"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_3_1"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_3_2"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_3_3"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_3_4"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_4_0"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_4_1"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_4_2"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_4_3"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/field_4_4"
                        android:background="@color/colorAccent" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:layout_margin="2dp"
                        android:onClick="onFieldButtonClick"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <Button
                        android:text="@string/resetButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/resetButton"
                        style="@style/Widget.AppCompat.Button.Borderless" android:onClick="onResetButtonClick"/>
                <Button
                        android:text="@string/botButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/botButton"
                        style="@style/Widget.AppCompat.Button.Borderless"/>
            </TableRow>
        </TableLayout>

        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.5"/>
        <TextView
                android:text="@string/errorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/errorText" android:layout_weight="1"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>