<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.5"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/tableLayout" android:layout_weight="1"
                android:gravity="center"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.1" android:gravity="center">
            <Button
                    android:text="@string/resetButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/resetButton"
                    style="@style/Widget.AppCompat.Button.Borderless" android:onClick="onResetButtonClick"
            />
            <Button
                    android:text="@string/botButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/botButton"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
        <TextView
                android:text="@string/infoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoText" android:layout_weight="0.3"
                android:textSize="24sp" android:textAlignment="center" android:textColor="#f00"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>